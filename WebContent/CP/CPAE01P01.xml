function GRD_MENU_BAS_OnHeadClick(obj,nCell,nX,nY,nPivotIndex)
{

	gfn_GridSort(GRD_MENU_BAS, PDS_MENU_BAS, nCell);	
}



//*------------------------------------------------------------------------------------------------
//* 함수설명     : 그리드 더블클릭
//* 함수유형     : 
//* parameter    : 
//* return value : 없음
//*-----------------------------------------------------------------------------------------------
function GRD_MENU_BAS_OnCellDblClick(obj,nRow,nCell,nX,nY,nPivotIndex)
{
	fn_set_usr_info(nRow);
}

//*------------------------------------------------------------------------------------------------
//* 함수설명     : 조회 엔터키 
//* 함수유형     : 
//* parameter    : 
//* return value : 없음
//*-----------------------------------------------------------------------------------------------

function S_USR_NM_OnKeyDown(obj,nChar,bShift,bCtrl, bAlt,LLParam,HLParam)
{
	if( nChar == 13 )
	{
		fn_search();
	}	
}
