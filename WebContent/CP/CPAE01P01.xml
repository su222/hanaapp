/**************************************************************************************************
  * 화면 변수 선언부
***************************************************************************************************/

var svcID			= "";		
var url   			= "";
var inDatasets  	= "";
var outDatasets 	= "";
var argument    	= "";
var callbackFunc 	= "";
 

/**************************************************************************************************
  * 공통 Function 처리 부분
***************************************************************************************************/

//  1-1.화면 셋팅 함수 
//  1-2.조회 함수     
//  1-3.Transaction 후 처리 해야 할 내용
//  1-4.창닫기

//*------------------------------------------------------------------------
//* 함수설명     : 1.1 화면셋팅 함수 
//* 함수유형     :
//* parameter    :
//* return value : 없음
//* 비고      
//*------------------------------------------------------------------------
function fn_initForm()
{


	S_USR_NM.Text = P_USR_NM; //부모값
	
	fn_search();
}

//*------------------------------------------------------------------------------------------------
//* 함수설명     : 1.2 조회 함수 
//* 함수유형     : 
//* parameter    : 
//* return value : 없음
//* 비고         :
//*-----------------------------------------------------------------------------------------------
function fn_search()
{
	PDS_MENU_BAS.ClearData();
	
	svcID			= "CPAE01P01.selectCatePopup";
	url   			= "service::common/select_mi.do";
	inDatasets  	= "";
	outDatasets 	= "PDS_MENU_BAS=cc.CCMenuPmsDAO.selectCatePopup";
	argument    	= " _sqlName=cc.CCMenuPmsDAO.selectCatePopup"
					;
	
	
	callbackFunc 	= "gfn_callback";

	gfn_showProgressWindow(true);
	gfn_Transaction(svcID, url, inDatasets, outDatasets, argument, callbackFunc);	 
}



//*------------------------------------------------------------------------------------------------
//* 함수설명     : 1.3 Transaction 호출후 결과값 확인 (gfn_callback에서 fn_callback을 호출한다.)
//* 함수유형     : 
//* parameter    : 
//* return value : 없음
//* 비고         :
//*-----------------------------------------------------------------------------------------------
function fn_callback(svcID, errorCode, errorMsg)
{
	gfn_showProgressWindow(false);
	
	switch(svcID) 
	{
		case "CPAE01P01.selectCatePopup" :
			if(PDS_MENU_BAS.rowcount == 1)
			{
				fn_set_usr_info(0);
			}

		break;	
		
		default:
			 // alert("기타"); 
	}
}


//*------------------------------------------------------------------------------------------------
//* 함수설명     : 1.4 창닫기
//* 함수유형     : 
//* parameter    : 
//* return value : 없음
//*-----------------------------------------------------------------------------------------------
function fn_close()
{
	close(false);
}



/**************************************************************************************************
  * 사용자 정의  Function 처리 부분
***************************************************************************************************/

//*------------------------------------------------------------------------------------------------
//* 함수설명     : 코드 값 setting
//* 함수유형     : 
//* parameter    : 
//* return value : 없음
//*-----------------------------------------------------------------------------------------------
function fn_set_usr_info(c_row)
{	

	// 부모창에 넘기기
	
	var retArr = Array();
	
	retArr[0] = PDS_MENU_BAS.GetColumn(c_row,"CATE_ID");
	retArr[1] = PDS_MENU_BAS.GetColumn(c_row,"CATE_NM");
			  
	close(retArr);	

}





